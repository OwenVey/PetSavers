<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/animalImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/dog1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/animalImage"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/animalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/animalBreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Yorkshire Terrier Yorkie"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/animalGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male • " />

            <TextView
                android:id="@+id/animalAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adult • " />

            <TextView
                android:id="@+id/animalSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small" />

        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/favoriteImage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/arrowImage"
        app:srcCompat="@drawable/ic_favorite_border" />

    <ImageView
        android:id="@+id/arrowImage"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        app:srcCompat="@drawable/arrow_right" />


</RelativeLayout>