<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">


    <RelativeLayout
        android:id="@+id/userInfo"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/profilePictrue"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/profileeEmail"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Test"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profileEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/profilePictrue"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="test@test.com"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/profilePictrue"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:tint="@color/secondaryText"
            app:srcCompat="@drawable/ic_person_black_24dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/buttonViewFavorites"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimary"
        android:onClick="viewFavorites"
        android:text="View Favorites"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonLogOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:onClick="logOut"
        android:text="Log Out"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"/>

</RelativeLayout>
